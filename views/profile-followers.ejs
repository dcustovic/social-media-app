<%- include('partials/header') %>
  
  <div class="container py-md-5 container--narrow mt-4 text-center" id="blur">
	<%- include('partials/flash') %>
	<%- include('partials/profileShared') %>
  
    <div class="list-group">
			<% followers.forEach(function(follower) {  %>
				<a href="/profile/<%= follower.username %>" class="list-group-item list-group-item-action">
					<div class="d-flex">
						<img class="avatar-tiny mr-3" src="<%= follower.avatar %>">
						<strong><%= follower.username %></strong>
					</div>
				</a>
			<% }) %>
		</div>
		
  </div>
  
  <%- include('partials/footer') %>