<%- include('partials/header') %>
  
  <div class="container py-md-5 container--narrow mt-4 text-center">
		<div class="row justify-content-center">
			<div class="col">
				<div class="card hovercard">
					<div class="cardheader">

					</div>
						<div class="avatar">
							<img class="profile-photo mb-3 mt-4" src="<%= profileAvatar %>">
						</div>
							<form action="#" method="POST">
								<h5><b><%= profileUsername %></b></h5>
								<div class="info">
									<div class="desc">Passionate designer</div>
									<div class="desc">Curious developer</div>
									<div class="desc">Tech geek</div>
								</div>
								<div class="bottom">
								<button class="btn btn-sm text-white follow-btn mt-2 mb-5">Follow <i class="fas fa-user-plus"></i></button>
								<!-- <button class="btn btn-danger btn-sm">Stop Following <i class="fas fa-user-times"></i></button> -->
								</div>
							</form>
				</div>
			</div>
		</div>
																		
		<hr>
																	
		<div class="profile-nav nav nav-tabs nav-justified pt-4">
			<a href="#" class="profile-nav-link nav-item nav-link active">Posts: 3</a>
			<a href="#" class="profile-nav-link nav-item nav-link ">Followers: 3</a>
			<a href="#" class="profile-nav-link nav-item nav-link ">Following: 2</a>
    </div>
  
    <div class="list-group">
			<% posts.forEach(function(post) {  %>
				<a href="/post/<%= post._id %>" class="list-group-item list-group-item-action">
					<div class="d-flex">
						<img class="avatar-tiny mr-3" src="<%= post.author.avatar %>">
						<strong><%= post.title %></strong>
						<div class="ml-auto"><%= post.createdDate.getDate() %>/<%= post.createdDate.getMonth() + 1 %>/<%= post.createdDate.getFullYear() %></div>
					</div>
				</a>
			<% }) %>
		</div>
		
  </div>
  
  <%- include('partials/footer') %>