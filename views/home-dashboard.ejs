<%- include('partials/header') %>

<div class="container py-md-5 container--narrow" id="blur">

  <%- include('partials/flash') %>

  <% if(posts.length) { %>
    <div class="list-group mt-4">
      <h2 class="text-center mb-5">Latest News From Your Followers</h2>
			<% posts.forEach(function(post) {  %>
				<a href="/post/<%= post._id %>" class="list-group-item list-group-item-action profile-results mb-3">
          <hr>
            <img class="avatar-small mr-2 mt-2" id="avatar-dashboard" src="<%= post.author.avatar %>">
            <strong><%= post.title %></strong> 
            <span class="text-muted small name-dashboard">by <b><%= post.author.username %></b> on <%= post.createdDate.getDate() %>/<%= post.createdDate.getMonth() + 1 %>/<%= post.createdDate.getFullYear() %></span>
            <div class="dashboard-post-body">
              <%= post.body %>
            </div>
            <hr>
				</a>
			<% }) %>
	  </div>
  <% } else { %>
    <div class="text-center mt-4">
      <h2>Hello <strong><%= user.username %></strong>, <br> your feed is empty.</h2>
      <p class="lead text-muted">Your feed displays the latest posts from the people you follow. If you don&rsquo;t have any friends to follow, you can use the &ldquo;Search&rdquo; feature in the top menu bar to find content written by people with similar interests and then follow them.</p>
      </div>  
    </div>
  <% } %>

</div>
  
<%- include('partials/footer') %>