<div class="row justify-content-center">
    <div class="col">
        <div class="card hovercard karta">
            <div class="cardheader">
            </div>
                <div class="avatar">
                    <img class="profile-photo mb-3 mt-4" src="<%= profileAvatar %>">
                </div>

                <h5><b><%= profileUsername %></b></h5>

                    <div class="info mb-3">
                        <div class="desc">Passionate designer</div>
                        <div class="desc">Curious developer</div>
                        <div class="desc">Tech geek</div>
                    </div>

                    <% if (user && !isVisitorsProfile) {
                        if (isFollowing) { %>
                            <form action="/removeFollow/<%= profileUsername %>" method="POST">
                                
                                <div class="bottom">
                                    <button class="btn btn-sm text-white follow-btn mt-2 mb-5">Unfollow <i class="fas fa-user-plus"></i></button>
                                </div>
                            </form>
                        <% } else { %>
                            <form action="/addFollow/<%= profileUsername %>" method="POST">
                                
                                <div class="bottom">
                                    <button class="btn btn-sm text-white follow-btn mt-2 mb-5">Follow <i class="fas fa-user-plus"></i></button>
                                </div>
                            </form>
                    <%	}
                    } %>
        </div>
    </div>
</div>
                                                                
<hr>
                                                            
<div class="profile-nav nav nav-tabs nav-justified pt-4">
    <a href="/profile/<%= profileUsername %>" class="profile-nav-link nav-item nav-link <%= currentPage == 'posts' ? 'active' : '' %>"><i class="fas fa-clipboard mr-2"></i>Posts: 0</a>
    <a href="/profile/<%= profileUsername %>/followers" class="profile-nav-link nav-item nav-link <%= currentPage == 'followers' ? 'active' : '' %>"><i class="fas fa-users mr-2"></i>Followers: 0</a>
    <a href="/profile/<%= profileUsername %>/following" class="profile-nav-link nav-item nav-link <%= currentPage == 'following' ? 'active' : '' %>"><i class="far fa-eye mr-2"></i>Following: 0</a>
</div>