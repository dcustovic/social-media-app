<%- include('partials/header') %>
  
  <div class="container py-md-5 container--narrow card mt-5">
    <form action="/create-post" method="POST">

      <label for="post-title" class="text-muted mb-1">Title</label>
      <div class="form-group">
        <input required name="title" id="post-title" class="form-control form-control-lg form-control-title" type="text" placeholder="What's on your mind?" autocomplete="off">
      </div>

      <label for="post-body" class="text-muted mb-1">Content</label>
      <div class="form-group">
        <textarea required name="body" id="post-body" class="form-control body-content tall-textarea" type="text" placeholder="Share your thoughts and opinions..."></textarea>
      </div>
      
      <button class="btn btn-primary">Publish</button>
    </form>
  </div>
  
<%- include('partials/footer') %>