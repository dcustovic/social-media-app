<%- include('partials/header') %>

<div id="container" class="container py-md-5 animated fadeIn">

  <% errors.forEach(function(x) { %>
    <div class="alert alert-danger text-center mt-2"><b><%= x %></b></div>
  <% }) %>
 
  <div class="row align-items-center text-center mx-auto animated fadeIn">
    <div class="col-lg-7 py-3 py-md-5 mb-1">
      <img class="logo2" src="img/people.png">
      <div class="naslov ">
        <h1 class="display-3 text-center"></h1>      
        <p class="lead text-muted text-center" id="text">Fun social media website where you can connect with your friends, family and loved ones. Create an account, it's totally free, and come join the fun!</p>
      </div>
    </div>

 
      <div class="col-lg-5 px-5 py-5 mt-5 card animated fadeIn">
        <form action="/register" method="POST" id="registration-form">
            
            <% regErrors.forEach(function(x) { %>
              <div class="alert alert-danger small"><b><%= x %></b></div>
            <% }) %>

            <label for="username-register" class="text-muted "><i class="fa fa-user icon"></i><small>Username</small></label>
            <div class="form-group">
              <input name="username" id="username-register" class="form-control" type="text" placeholder="Pick a username" autocomplete="off">
            </div>

            <label for="username-register" class="text-muted "><i class="fas fa-at icon"></i><small>Email</small></label>
            <div class="form-group">
              <input name="email" id="email-register" class="form-control" type="text" placeholder="you@example.com" autocomplete="off">
            </div>
            
            <label for="username-register" class="text-muted "><i class="fas fa-key icon"></i><small>Password</small></label>
            <div class="form-group">
              <input name="password" id="password-register" class="form-control" type="password" placeholder="Create a password">
            </div>

            <label for="username-register" class="text-muted"><small>Confirm Password</small></label>
            <div class="form-group">
              <input name="passwordConfirm" id="passwordConfirm" class="form-control retype-field" type="password" placeholder="Retype your password">
            </div>
            
            <button type="submit" id="button-signup" class="py-3 mt-4 btn btn-lg btn-warning btn-block">Sign up</button>
            
          </form>
      </div>
  </div>
</div>
  
<%- include('partials/footer') %>